---
const hobbies = [
	{
		title: "Art",
		description: "I sketch and explore digital art in my free time. It helps me think about composition and visual design."
	},
	{
		title: "Photography", 
		description: "Taking photos of everyday moments and landscapes. I enjoy experimenting with lighting and perspectives."
	},
	{
		title: "Development",
		description: "Building small side projects and experimenting with new web technologies. Always learning something new."
	}
];
---

<section id="hobbies" class="hobbies">
	<div class="container">
		<h2 class="section-title">Hobbies</h2>
		<p class="section-subtitle">Things I enjoy outside of work</p>
		
		<div class="hobbies-grid">
			{hobbies.map((hobby) => (
				<div class="hobby-card">
					<h3 class="hobby-title">{hobby.title}</h3>
					<p class="hobby-description">{hobby.description}</p>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.hobbies {
		padding: 4rem 2rem;
		background: var(--bg-primary);
	}

	.container {
		max-width: 1000px;
		margin: 0 auto;
	}

	.section-title {
		font-size: 2rem;
		font-weight: 600;
		text-align: center;
		margin-bottom: 1rem;
		color: var(--text-primary);
	}

	.section-subtitle {
		text-align: center;
		color: var(--text-muted);
		margin-bottom: 2.5rem;
		font-size: 1rem;
	}

	.hobbies-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 1.5rem;
	}

	.hobby-card {
		background: var(--bg-card);
		border: 1px solid var(--border-subtle);
		border-radius: 12px;
		padding: 1.8rem;
		text-align: center;
		transition: all 0.3s ease;
	}

	.hobby-card:hover {
		background: var(--bg-card-hover);
		border-color: var(--border-accent);
		transform: translateY(-2px);
		box-shadow: 0 4px 15px var(--accent-glow);
	}

	.hobby-title {
		font-size: 1.2rem;
		font-weight: 600;
		margin-bottom: 1rem;
		color: var(--text-primary);
	}

	.hobby-description {
		color: var(--text-secondary);
		line-height: 1.6;
		font-size: 0.95rem;
	}

	@media (max-width: 768px) {
		.hobbies {
			padding: 3rem 1rem;
		}

		.hobbies-grid {
			grid-template-columns: 1fr;
		}

		.section-title {
			font-size: 1.8rem;
		}
	}
</style>